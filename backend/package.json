{
  "name": "apollo-backend",
  "version": "1.0.0",
  "description": "Apostrophe backend for the ApostropheCMS + Astro Apollo template",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node app",
    "dev": "APOS_EXTERNAL_FRONT_KEY=dev nodemon",
    "build": "NODE_ENV=production node app @apostrophecms/asset:build",
    "serve": "NODE_ENV=production node app",
    "release": "npm install && npm run build && npm run migrate",
    "migrate": "NODE_ENV=production node app @apostrophecms/migration:migrate",
    "load-starter-content": "./scripts/load-starter-content",
    "update-starter-content": "./scripts/update-starter-content"
  },
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=22.0.0",
    "npm": ">=9.0.0"
  },
  "nodemonConfig": {
    "delay": 1000,
    "verbose": true,
    "watch": [
      "./app.js",
      "./modules/**/*",
      "./lib/**/*.js",
      "./views/**/*.html"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "**/ui/apos/",
      "**/ui/src/",
      "**ui/public/",
      "locales/*.json",
      "public/uploads/",
      "public/apos-frontend/*.js",
      "data/"
    ],
    "ext": "json, js, html, scss, vue"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apostrophecms/apollo"
  },
  "author": "Apostrophe Technologies, Inc.",
  "license": "MIT",
  "dependencies": {
    "@apostrophecms/ai-helper": "^1.0.0-beta.9",
    "@apostrophecms/anchors": "^1.0.1",
    "@apostrophecms/event": "^1.0.2",
    "@apostrophecms/i18n-static": "^1.1.1",
    "@apostrophecms/import-export": "^3.2.1",
    "@apostrophecms/login-hcaptcha": "^1.2.1",
    "@apostrophecms/login-totp": "^1.3.2",
    "@apostrophecms/mongodb-snapshot": "^1.1.0",
    "@apostrophecms/passport-bridge": "^1.5.0",
    "@apostrophecms/piece-type-exporter": "^1.1.0",
    "@apostrophecms/piece-type-importer": "^1.4.0",
    "@apostrophecms/redirect": "^1.4.2",
    "@apostrophecms/scheduled-publishing": "^1.0.5",
    "@apostrophecms/seo": "^1.3.0",
    "@apostrophecms/sitemap": "^1.1.1",
    "@apostrophecms/svg-sprite": "^1.0.2",
    "@apostrophecms/vite": "^1.0.0",
    "@bodonkey/charting-extension": "^1.1.0",
    "@bodonkey/pally-extension": "^1.1.4",
    "apostrophe": "^4.18.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-apostrophe": "^4.0.0",
    "nodemon": "^3.0.1"
  }
}
